{
  "name": "email-server",
  "main": "index.js",
  "repository": "https://github.com/Velorona-LLC/email-server.git",
  "author": "shreekrishnalamichhane <shree.krishna@velorona.com>",
  "description": "",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "yarn": ">=1.22.19",
    "npm": "This project should only be used with yarn, npm is not recommended"
  },
  "scripts": {
    "dev": "concurrently \"yarn watch-compile\" \"yarn watch-dev\"",
    "watch-compile": "swc src -w --out-dir dist",
    "watch-dev": "nodemon --watch \"dist/**/*\" -e js dist/index.js",
    "build": "yarn clean && swc src -d dist",
    "start": "node dist/index.js",
    "clean": "rm -rf dist && rm -drf node_modules && yarn install",
    "prepare": "husky install",
    "prettier": "prettier --write .",
    "lint": "eslint src",
    "watch": "tsc -w"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "@swc/cli": "^0.1.63",
    "@swc/core": "^1.3.99",
    "@types/cookie-parser": "^1.4.6",
    "@types/cors": "^2.8.17",
    "@types/nodemailer": "^6.4.14",
    "@types/react": "^18.2.38",
    "@types/react-dom": "^18.2.17",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "chokidar": "^3.5.3",
    "concurrently": "^8.2.2",
    "dotenv": "^16.3.1",
    "eslint": "^8.54.0",
    "husky": "^8.0.3",
    "nodemon": "^3.0.1",
    "prettier": "^3.1.0",
    "tslint": "^4.3.1",
    "typescript": "^5.3.2"
  },
  "dependencies": {
    "@react-email/body": "0.0.4",
    "@react-email/button": "^0.0.11",
    "@react-email/column": "^0.0.8",
    "@react-email/container": "0.0.10",
    "@react-email/head": "0.0.6",
    "@react-email/heading": "^0.0.9",
    "@react-email/hr": "0.0.6",
    "@react-email/html": "0.0.6",
    "@react-email/img": "^0.0.6",
    "@react-email/link": "0.0.6",
    "@react-email/preview": "0.0.7",
    "@react-email/row": "^0.0.6",
    "@react-email/section": "0.0.10",
    "@react-email/tailwind": "0.0.12",
    "@react-email/text": "0.0.6",
    "discord-webhook-node": "^1.1.8",
    "express": "^4.18.2",
    "moment": "^2.29.4",
    "nodemailer": "^6.9.7",
    "react": "^18.2.0",
    "zod": "^3.22.4"
  }
}
